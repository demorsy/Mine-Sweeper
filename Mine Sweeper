                            dice = random.randrange(1, 2)





                        print("Dice Result: " + str(dice))
                        length = dice*35



                        print(turtle_name_1 + "'s Score: " + str(score_t1+ dice))
                        print(turtle_name_2 + "'s Score: " + str(score_t2))
                        score_t1 += dice

                        fd(turtle_1, length)



