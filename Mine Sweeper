        world= TurtleWorld().geometry("1200x300")


        staff_turtle1 = Turtle()
        staff_turtle2 = Turtle()


        def determine_position(turtle, x1, x2):
            pu(turtle)
            lt(turtle, 90)
            fd(turtle, x1)
            lt(turtle, 90)
            fd(turtle, x2)
            lt(turtle, 180)
            pd(turtle)


        def create_blocks(turtle, length):
            for i in range(30):
                for i in range(4):
                    fd(turtle, length)
                    lt(turtle, 90)
                pu(turtle)
                fd(turtle, 35)
                pd(turtle)
        staff_turtle2.set_delay(0.001)
        staff_turtle1.set_delay(0.001)
        determine_position(staff_turtle1,120,120)
        determine_position(staff_turtle2,0,120)
        create_blocks(staff_turtle1,5)
        create_blocks(staff_turtle2,5)

        die(staff_turtle1)
        die(staff_turtle2)


        def draw_frame(turtle):
            pu(turtle)
            lt(turtle, 90)
            fd(turtle, 160)
            lt(turtle, 90)
            fd(turtle, 140)
            lt(turtle, 180)
            pd(turtle)
            for i in range(4):
                fd(turtle, 1050)
                rt(turtle, 90)
                fd(turtle, 200)
                rt(turtle, 90)


        drawer = Turtle()

        draw_frame(drawer)
        die(drawer)

        import random


        def put_bombs1(turtle):
            pu(turtle)
            lt(turtle, 90)
            fd(turtle, 120.0)
            lt(turtle, 90)
            fd(turtle, 120.00000000000001)
            lt(turtle, 180)
            pd(turtle)



        def put_bombs2(turtle, ):
            pu(turtle)
            lt(turtle, 90)
            fd(turtle, 0)
            lt(turtle, 90)
            fd(turtle, 120)
            lt(turtle, 180)
            pd(turtle)


